{
  "manifest_version": 2,
  "name": "Your Extension",
  "version": "1.0",
  "description": "Custom Permission Request Layout",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "custom-layout.html",
    "custom-layout.js",
    "custom-layout.css"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
